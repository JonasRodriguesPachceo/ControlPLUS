##########################################################
# APP / LARAVEL
##########################################################
APP_NAME=ControlPLUS
APP_ENV=local
APP_DEBUG=true
APP_URL=<http://localhost:8080-ou-URL-do-seu-backend>
APP_KEY=<GERAR_COM_php artisan key:generate_E_COPIAR_AQUI>

LOG_CHANNEL=daily
LOG_LEVEL=debug

##########################################################
# TIMEZONE / LOCALE
##########################################################
APP_TIMEZONE=America/Sao_Paulo
APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=pt_BR

##########################################################
# PHP-FPM USER (Docker)
##########################################################
PUID=<1000>
PGID=<1000>

##########################################################
# DATABASE (APP)
##########################################################
DB_CONNECTION=mysql
DB_HOST=<db-ou-host-do-banco>
DB_PORT=<3306>
DB_DATABASE=<control_plus>
DB_USERNAME=<usuario_db>
DB_PASSWORD=<senha_db>

##########################################################
# DATABASE (VARIÁVEIS DO CONTAINER DO DB)
# Usadas só pelo container de banco (não pelo Laravel).
##########################################################
MARIADB_ROOT_PASSWORD=<root_password>
MARIADB_DATABASE=<control_plus>
MARIADB_USER=<usuario_db>
MARIADB_PASSWORD=<senha_db>

##########################################################
# CACHE / QUEUE / SESSION (Redis)
##########################################################
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=300
REDIS_HOST=<redis>
REDIS_PASSWORD=<null-ou-senha>
REDIS_PORT=<6379>

##########################################################
# MAIL (Opcional)
##########################################################
MAIL_MAILER=smtp
MAIL_HOST=<smtp.seuprovedor.com>
MAIL_PORT=<587>
MAIL_USERNAME=<seu_usuario_email>
MAIL_PASSWORD=<sua_senha_ou_app_password>
MAIL_ENCRYPTION=<tls-ou-ssl>
MAIL_FROM_ADDRESS=<contato@seudominio.com.br>
MAIL_FROM_NAME="ControlPLUS"

##########################################################
# FRONTEND / VITE
##########################################################
VITE_API_URL=<http://localhost:8080-ou-URL-do-seu-backend>
VITE_PORT=<3000>
CHOKIDAR_USEPOLLING=true

##########################################################
# STORAGE / BROADCAST / MISC
##########################################################
FILESYSTEM_DISK=<local-ou-s3>
BROADCAST_DRIVER=<log-ou-pusher>
QUEUE_FAILED_DRIVER=database

##########################################################
# PORTS (referência)
##########################################################
APP_PORT=<8080>
FORWARD_DB_PORT=<opcional>
FORWARD_REDIS_PORT=<opcional>
