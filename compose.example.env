##########################################################
# DOCKER / INFRA CONFIG (EXAMPLE FILE)
# Duplicate this file as "compose.env" for local use
##########################################################

# ======================
# USER & PERMISSIONS
# ======================
# UID e GID do usuário local (ajusta permissões em volumes)
PUID=1000
PGID=1000

# ======================
# DATABASE (MARIADB)
# ======================
# Variáveis usadas pelo container de banco (não pelo Laravel)
MARIADB_ROOT_PASSWORD=root
MARIADB_DATABASE=control_plus
MARIADB_USER=control
MARIADB_PASSWORD=control

# Porta mapeada para acesso local (ex.: 3307 -> 3306)
FORWARD_DB_PORT=3307

# ======================
# REDIS (CACHE/QUEUE)
# ======================
REDIS_PORT=6379
FORWARD_REDIS_PORT=6379

# ======================
# FRONTEND (NODE / VITE)
# ======================
VITE_PORT=5173
VITE_BACKEND_URL=http://localhost:8080
VITE_DEV_SERVER_URL=http://localhost:5173
CHOKIDAR_USEPOLLING=true

# ======================
# BACKEND (LARAVEL)
# ======================
APP_PORT=8080

# ======================
# DOCKER COMPOSE PROJECT
# ======================
# Nome base para os containers (opcional)
COMPOSE_PROJECT_NAME=controlplus
